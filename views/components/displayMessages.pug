ul.postContainer
    for post in posts    
        li.post
            if user
                .postComponent 
                    span.postLabel Author: 
                    span.postContent #{post.first_name}
            .postComponent 
                span.postLabel Title: 
                span.postContent=post.title 
            .postComponent 
                span.postLabel Message: 
                span.postContent=post.message
